
<%= simple_form_for(@payment_information) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :ch_name %>
    <%= f.input :ch_surname %>
    <%= f.input :cell_no %>
    <%= f.input :payment_method %>
    <%= f.input :card_no %>
    <%= f.input :expiration_month %>
    <%= f.input :expiration_year %>
    <%= f.input :security_code %>
    <%= f.input :address_line1 %>
    <%= f.input :address_line2 %>
    <%= f.input :city %>
    <%= f.input :postal_code %>
    <%= f.input :country %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>