<%= form_for :payment_information, :url => make_payment_url, method: "get", :html => {:target=>'_blank'} do %>

  <div class="form-inputs">
    <%= hidden_field_tag :id, `@toy.id` %>
    <%= label_tag(:q, "cardholder name:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "cardholder last name:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "cell no:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "payment method:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "card no:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "expiration month:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "expiration year:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "cardholder name:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "security code:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "address line 1:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "address line 2:")%>
    <%= text_field_tag(:q) %>
    <%= label_tag(:q, "city:")%>
  </div>

  <div class="form-actions">
    <%= button_to 'DOWNLOAD PDF', make_payment_path(@toy.id), target: "_blank" %>
  </div>
  <br><br><br><br>
<% end %>

<script>
  var body;

  document.onreadystatechange = () => {
      if (document.readyState === 'complete') {
          body = document.getElementsByTagName("BODY")[0];
          body.style.overflowY = "scroll";
      }
  };
</script>
