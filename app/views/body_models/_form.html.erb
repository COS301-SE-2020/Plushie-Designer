
<%= simple_form_for(@body_model) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :body_file, required: true, error: 'Body file is mandatory, please specify one'  %>
    <div class="hinput">
      <%= f.input :tp, input_html: {value: ""}  %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
