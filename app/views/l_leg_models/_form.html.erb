
<%= simple_form_for(@l_leg_model) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :l_leg_file, :label => "Left Leg File", required: true, error: 'Left leg file is mandatory, please specify one'   %>
    <%= f.input :l_leg_image%>
    <div class="hinput">
      <%= f.input :tp, input_html: {value: ""} %>
    </div>
  </div>

  <div class="buttons">
      <div class="row">
        <div class="share-btn-right">
          <div class="form-actions buttons">
            <%= f.submit "Upload Left Leg", :id => "share-btn" , :class => "btn" %>
          </div>
        </div>
      </div>
    </div>
<% end %>
