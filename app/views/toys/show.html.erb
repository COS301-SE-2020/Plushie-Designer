<p>
  <%= content_tag :div, class: "head", data: {head: @toy.head} do %>
  <% end %>
</p>

<p>
  <%= content_tag :div, class: "arms", data: {arms: @toy.arms} do %>
  <% end %>
</p>

<p>
  <%= content_tag :div, class: "torso", data: {torso: @toy.torso} do %>
  <% end %>
</p>

<p>
  <%= content_tag :div, class: "legs", data: {legs: @toy.legs} do %>
  <% end %>
</p>

<div class="details">
  <div class="row">
      <!-- Blog Post Content Column -->
      <div class="col-lg-8">
          <!-- Blog Post -->
          <!-- Title -->
          <h1 style="font-size: 30.5px;">
              <%= @toy.name %>
          </h1>
          <!-- Author -->
          <hr>
          <p>
              Created by: <%= @toy.user.username %>
          </p>
          <hr>
          <p><span class="glyphicon glyphicon-time"></span> Was Posted:
              <hr>
              <div class="Ratings">
              <h4>
                Ratings:
                </h4>
                <%= render @toy.ratings %>
              </div>
              <%= render 'ratings/form' %>
              <hr>
              <br><br><br><br><br>
      </div>
  </div>
</div>

<div class="options">
  <%= link_to 'Back', toys_path %>
  <br><br><br>
  <% if current_user == @toy.user%>
    <span><%= button_to 'Edit', edit_toy_path(@toy), method: "get", :class => "btn ed-button" %></span>
    <span><%= button_to 'Delete', @toy, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn ed-button" %></span>
  <% end %>
</div>

<div class="editor">
    <%= javascript_pack_tag 'showEditor' %>
</div>