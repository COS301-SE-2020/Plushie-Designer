    </div>

    <div class="texture-collapse panel-collapse collapse" id="texture-collapse">
      <div class="panel-body">
        <div class="texture-controls">
          <div id="js-tray" class="tray">
              <div id="js-tray-slide" class="tray__slide"></div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <br>
  <div class="buttons">
    <div class="row">
      <div class="share-btn-right">
        <div class="form-actions buttons">
          <%= f.submit "Update Plushie", :id => "share-btn" , :class => "btn"%>
        </div>
      </div>
    </div>
  </div>
</div>

 <script>
    $(document).ready(() => {
      $( function() {
        $('.panel-clr').click( function() {
          $('.panel-clr.on').toggleClass('on');
          $(this).toggleClass('on');
        } )
      }); 
    });
</script>

<% end %>