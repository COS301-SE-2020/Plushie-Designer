<div class="options">
    <div class="index-page">
        <%= render 'form', toy: @toy %>

        <hr>
        <%= button_to 'Back', toys_path, method: :get, :id => "back-btn" %>
    </div>
</div>

<div class="editor">
    <%= javascript_pack_tag 'Editor1' %>
</div>

<script>
    function reloadIt() {
        if (window.location.href.substr(-2) !== "?r") {
            window.location = window.location.href + "?r";
        }
    }
    setTimeout('reloadIt()', 1)();
</script>

<section id="loading-screen">
    <div id="loader"></div>
</section>