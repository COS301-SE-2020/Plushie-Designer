
<div class="toy-index">
    <h1>Plushies</h1>
    <div class="card-container">
        <!-- Blog toy Content Column -->
        <!-- <div class="col-lg-10"> -->
            
            <% @toys.each do |toy| %>
                <!-- Blog toy -->
                <!-- Title -->
                <% if toy.shared || current_user == toy.user%>
                    <div class="toy-card">
                        <!-- <div class="toy-download-pdf"> -->
                            <%= link_to '<span class="glyphicon glyphicon-download-alt"></span>'.html_safe, payment_path(toy.id), :class => "toy-download-pdf", :id => "download-pdf" if current_user != nil%>
                        <!-- </div> -->
                        <div class="card-content">
                            <img class="PlushImg" src=<%= toy.image %>>
                            <div class="card-footer">
                                <div class="row">
                                    <div class="col-4">
                                        <h4 class="toy-name" style="font-size: 20px;"><%= link_to toy.name, toy %></h4>
                                    </div>
                                    <!-- Author -->
                                    <div class="col-8">
                                        <p class="toy-author">
                                            Plushie By:<strong> <%= toy.user.username %></strong>
                                        </p>
                                    </div>
                                </div>
                                <div class="row">
                                    <!-- Date/Time -->
                                    <p class="created-on">
                                        <span class="glyphicon glyphicon-time"></span> Created: <%= time_ago_in_words(toy.created_at) %>
                                    </p>
                                    
                                    <p class="toy-rating">
                                        <% toy.rating = 0 %>
                                        <% if toy.ratings.length > 0 %>
                                            <% toy.ratings.each do |r| %>
                                                <% toy.rating = toy.rating + r.value %>
                                                <% @num = @num + 1 %>
                                            <% end %>
                                            Rating:<strong> <%= toy.rating/@num %>/5</strong>
                                            <% @num = 0 %>
                                        <% else%>
                                            <strong> No Ratings</strong>
                                        <% end %>
                                    </p>
                                </div>
                            </div>

                            <!-- <div class="toy-footer-row">
                                <h4 class="toy-name" style="font-size: 20px;"><%= link_to toy.name, toy %></h4> -->
                                <!-- Author -->
                                <!-- <p class="toy-author">
                                    Plushie By:<strong> <%= toy.user.username %></strong>
                                </p>
                            </div> -->
                            <!-- Date/Time -->
                            <!-- <p class="created-on">
                                <span class="glyphicon glyphicon-time"></span> Created: <%= time_ago_in_words(toy.created_at) %>
                            </p>
                            
                            <p class="toy-rating">
                                <% toy.rating = 0 %>
                                <% toy.ratings.each do |r| %>
                                    <% toy.rating = toy.rating + r.value %>
                                    <% @num = @num + 1 %>
                                <% end %>
                                Rating:<strong> <%= toy.rating/@num %>/5</strong>
                                <% @num = 0 %>
                            </p>
                            <%= link_to 'DOWNLOAD PDF', payment_path(toy.id)%> -->
                        </div>
                    </div>
                    <!-- <hr> -->
                    <!-- toyed Comments -->
                    <!-- Comment -->
                <% end %>
            <% end %>
        <!-- </div> -->
        <!-- Blog Sidebar Widgets Column -->
    </div>
